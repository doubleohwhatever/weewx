    gauge.axis().scale()
            .minimum(0)
            .maximum(360)
            .ticks({interval: 22.5})
            .minorTicks({interval: 10});

    gauge.axis()
            .fill('#7c868e')
            .startAngle(0)
            .sweepAngle(360)
            .width(1)
            .ticks(
                    {
                        type: 'line',
                        fill: '#ffffff',
                        length: 0,
                        position: 'inside'
                    }
            );

    gauge.axis(1).labels()
            .enabled(true)
            .fontSize(14)
            .padding(5)
            .position("center-top")
  			.anchor("left")
