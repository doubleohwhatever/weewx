        <div class="row">
            <div class="col col-6 crd graph-crd">
              <h4>WIND FORECAST (NEXT 12 HOURS)</h4>
                <a href="https://meteomaps.com" target="_blank">
                    <img style="background: url('https://loading.meteomaps.com/v1/666666/1280x720.png') no-repeat;" src="https://api.meteomaps.com/?key=6d118e9779541b0d7d146673760620f4&action=get-animation&width=1280&height=720&map-center-lat=33.401754939703224&map-center-lon=-86.67024173089601&overlay=true&base-map=default&legend=display:true;bg-color:333333;display-labels:true;display-unit-label:true;style:default;width:auto;label-unit:imperial&get=period&start=now&end=%2B12+hours&zoom=3&data-layer=hrrr-sh-wind-spd-18hr-conus&data-layer-transparency=100&frames=12&frame-rate=4&box[]=color:333333;x1:0;y1:0;x2:WIDTH;y2:25&label[]=color:FFFFFF;x:5;y:11;size:18;tz:America/Chicago;text:DLTIME&cities=display:true;size:12;data-type:nearest;text:NAME&display-logo=true" alt="Meteo Maps" height="720" width="1280">
                </a>
            </div>
            <div class="col col-6 crd graph-crd">
              <h4>PRECIPITATION FORECAST (NEXT 12 HOURS)</h4>
                <a href="https://meteomaps.com" target="_blank">
                    <img style="background: url('https://loading.meteomaps.com/v1/666666/1280x720.png') no-repeat;" src="https://api.meteomaps.com/?key=6d118e9779541b0d7d146673760620f4&action=get-animation&width=1280&height=720&map-center-lat=33.401754939703224&map-center-lon=-86.67024173089601&overlay=true&base-map=default&legend=display:true;bg-color:333333;display-labels:true;display-unit-label:true;style:default;width:auto;label-unit:imperial&get=period&start=now&end=%2B12+hours&zoom=3&data-layer=hrrr-precip-18hr-conus&data-layer-transparency=100&frames=12&frame-rate=4&box[]=color:333333;x1:0;y1:0;x2:WIDTH;y2:25&label[]=color:FFFFFF;x:5;y:11;size:18;tz:America/Chicago;text:DLTIME&cities=display:true;size:12;data-type:nearest;text:NAME&display-logo=true" alt="Meteo Maps" height="720" width="1280">
                </a>
            </div>
        </div>

    </div>
</main>

<footer>
    <div class="container">
        <center>
        <p><a href="station.html">STATION INFO</a>
            &bull; <a target="_blank" href="data.json">JSON</a>
            <br />&copy; $current.dateTime.format("%Y") Andrew Billits / Griffin Park Weather
        </p>
        </center>
    </div>
</footer>

<div style="display: none;">
    <div id="data_loading"><i class="loading wi wi-thermometer"></i></div>
</div>

<!-- Javascript. jQuery etc. (see gulpfile) included in main.min.js -->
<script src="main.min.js"></script>
<script type="text/javascript">
var tid = setInterval(newDataCheck, 5000);
var currentDataStamp = $current.dateTime.raw;
function newDataCheck() {
  $.getJSON("data.json", function(json) {
      //console.log(json); // this will show the info it in firebug console
      //alert(json["last-updated"]);
      if (json["last-updated"] > currentDataStamp) {
        //reload page
        location.reload(true);
      } else {
        //update live data
      }
  });
}
function abortTimer() { // to be called when you want to stop the timer
  clearInterval(tid);
}
</script>
</body>
</html>
